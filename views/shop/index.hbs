{{!-- # indicates its block statement --}}
{{# each products}}
<div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-4">
        <div class="card" style="width: 35rem; height:50rem; ">
            <img src="{{ this.imagePath }}" class="card-img-top" alt="..."
                style="width : 200px; margin : auto; height : 250px; margin-left : 50px;">
            <div class="card-body">
                <h5 class="card-title"><strong>{{this.title}}</strong></h5>
                <p class="card-text">{{this.description}}</p>
                <div class="price" style="font-size :20px;">${{this.price}}</div>
                <a href="#" class="btn btn-primary" style="margin-left : 165px;">Add To Shopping Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}